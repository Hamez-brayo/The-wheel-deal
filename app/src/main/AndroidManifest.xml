        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheWheelDeal">
        <activity
            android:name=".Driver_details_activity"
            android:exported="false" />
